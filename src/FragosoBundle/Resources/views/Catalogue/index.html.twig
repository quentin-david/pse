{% extends ":Layout:layout.html.twig" %}

{% block left_nav %}
    <div class="list-group">
        <a href="#"><button type="button" class="btn btn-primary btn-lg btn-block">Services</button></a>
        <a href="#"><button type="button" class="btn btn-default btn-lg btn-block">Categories</button></a>
    </div>
    
    <div class="list-group launcher">
        <a href="{{path('creer_categorie') }}">
            <button type="button" class="btn btn-default" data-toggle="tooltip" data-placement="top" title="ajout categorie">
                <span class="glyphicon glyphicon-plus"></span>
            </button>
        </a>
    </div>
{% endblock %}

{% block title %} Catalogue des services {% endblock %}

{% block content %}
	<h3>Liste des services et produits</h3>
    
    <h4>
        Categories
        <span class="badge">{{liste_categories|length}}</span>
    </h4>
    <ul>
    {% for categorie in liste_categories %}
        <li>
            {{categorie.libelle}}
            <a href="{{ path('editer_categorie', {'categorie_num': categorie.id}) }}">
                <button type="button" class="btn btn-default btn-xs" data-toggle="tooltip" data-placement="top" title="editer categorie">
                    <span class="glyphicon glyphicon-pencil"></span>
                </button>
            </a>
            <a href="{{ path('supprimer_categorie', {'categorie_num': categorie.id}) }}">
                <button type="button" class="btn btn-default btn-xs" data-toggle="tooltip" data-placement="top" title="supprimer categorie">
                    <span class="glyphicon glyphicon-remove"></span>
                </button>
            </a>
        </li>
    {% endfor %}
    </ul>
    
    <h4>Services</h4>
{% endblock %}
