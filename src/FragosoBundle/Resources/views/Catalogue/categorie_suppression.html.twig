{% extends ':Layout:layout.html.twig' %}

{% block content %}      
    <div class="col-lg-12">
        <h3>Suppression d'une categorie </h3>
        <p>
            Etes vous sur de vouloir supprimer 'l'objet <b>{{ categorie.libelle }}</b>
        </p>
    </div>
    
    <div class="col-lg-12">
        <form action="{{ path('supprimer_categorie', {'categorie_num': categorie.id}) }}" method="post">
            <a href="{{ path('catalogue_home') }}" class="btn btn-default">
                Retour liste categories
            </a>
            <input type="submit" value="Supprimer" class="btn btn-danger" />
        </form>
    </div>
{% endblock %}