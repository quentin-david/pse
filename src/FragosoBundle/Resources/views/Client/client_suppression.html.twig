{% extends ':Layout:layout.html.twig' %}

{% block content %}      
    <div class="col-lg-12">
        <h3>Suppression d'un Client </h3>
        <p>
            Etes vous sur de vouloir supprimer le client <b>{{ client.prenom }} {{ client.nom }}</b>
        </p>
    </div>
    
    <div class="col-lg-12">
        <form action="{{ path('supprimer_client', {'client_num': client.id}) }}" method="post">
            <a href="{{ path('client_home') }}" class="btn btn-default">
                Retour liste clients
            </a>
            <input type="submit" value="Supprimer" class="btn btn-danger" />
        </form>
    </div>
{% endblock %}
