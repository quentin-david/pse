        <a href="{{ path('creer_commande') }}">
            <button type="button" class="btn btn-default" data-toggle="tooltip" data-placement="top" title="Nouvelle commande">
                <span class="glyphicon glyphicon-plus"></span>
            </button>
        </a>
    </div>#}
{% endblock %}

{% block title %}
	{% if commande_etat == 'en-cours' %}
		Commandes en cours
	{% elseif commande_etat == 'terminees' %}
		Commandes terminées
	{% else %}
		Totalité des commandes
	{% endif %}
{% endblock %}

{% block content %}
	<div class="row">
	{% if liste_commandes %}
		{% include "FragosoBundle:Commande:snippet_commande.html.twig" with {'liste_commandes': liste_commandes} %}
	{% else %}
		{% if commande_etat == 'en-cours' %}
			<div class="alert alert-info">Aucune commande en cours</div>
		{% elseif commande_etat == 'terminees' %}
			<div class="alert alert-info">Aucune commande terminée</div>
		{% else %}
			<div class="alert alert-info">Aucune commande encore</div>
		{% endif %}
		
	{% endif %}
	</div>
{% endblock %}
