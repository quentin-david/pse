{% extends ":Layout:layout_large.html.twig" %}

{% block title %} Accueil {% endblock %}

{% block content %}
	
	<h3>Commandes en cours</h3>
		<div class="row">
			{% include "FragosoBundle:Commande:snippet_commande.html.twig" with {'liste_commandes': liste_commandes_encours, 'table_id': 'table1'} %}
		</div>
		
	<h3>Clients d√©biteurs</h3>
		{% for client in liste_clients_debiteurs %}
			<div class="col-lg-3">
				<a class="panel-client" href="{{path('afficher_client', {'client_num': client.id})}}">
					<div class="panel panel-default panel-client">
						<h3>{{client.prenom|capitalize}} {{client.nom|upper}}</h3>
						{#<h3>{{client.nom|upper}}</h3>#}
						<h2>{{client.getSolde}} euros</h2>
					</div>
				</a>
			</div>
		{% endfor %}
{% endblock %}
